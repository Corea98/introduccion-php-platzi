{% extends "layout.twig" %}

{% block content %}
<h1>Login</h1>
<div class="alert alert-primary" role="alert">
    {{ responseMessage }}
</div>
<form action="./auth" method="POST">
    <label>Email</label>
    <input type="email" name="email" /> <br>

    <label>Password</label>
    <input type="password" name="password" /> <br>

    <button type="submit">Login</button> 
</form>

{% endblock %}